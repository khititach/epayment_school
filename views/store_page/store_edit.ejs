          data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
          aria-label="Toggle navigation">
          <i class="fa fa-bars"></i>
        </button>
        <button type="button" class="btn btn-info ml-2" data-toggle="modal" data-target="#change_password_modal">
            <i class="fa fa-pencil "></i>
        </button> 
        <div class="toggle-title-name"><%= store_data.store_name %></div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="nav navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">หน้าร้านค้า</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/store/report">ประวัติ</a>
