        </div>
        <div class="buy-item-form add-shadow mt-2">
            <div class="row">
              <div class="col-md-5">
                <h4> จำนวนเงิน (บาท) </h4>
              </div>
              <div class="col-md-6">
                  <input class="input-group-text mb-2" type="text" id="item_price" placeholder="จำนวนเงิน">
                  <button class="btn btn-primary" id="buyItem_confirm" onclick="initBuyitem($('#item_price').val())"> จ่ายเงิน
                  </button>
                  <button class="btn btn-secondary" onclick='clear_data()'> ล้างข้อมูล </button>
              </div>
            </div>
        </div>
        <div class="buy-item-form add-shadow mt-2">
          <div id="itemData" class="p-2" style="background-color: white;position: fixed;top:0;left:0;min-width: 347px;min-height: 1024px;display:none">
            <div class="row">
              <div class="col-md-12">
                <div class=" clearfix">
                  <button type="button"  onclick="closeOrderModal()"
                   class="btn-sm btn-outline-dark float-right">Close</button>
                </div>
              </div>
            </div>

              <div class="row mt-1" >
                <h6 class="col-md-5 text-center">รายการ</h6>
                <h6 class="col-md-2 text-center">จำนวน</h6>
                <h6 class="col-md-5"></h6>
              </div>
              <!-- -------------------------Data space------------------------- -->
            <div  class="mt-2" id="orderData"></div>
              <!-- -------------------------Data space------------------------- -->

              <!-- -------------------------summary space------------------------- -->
              <div class="dropdown-divider mt-3"></div>

              <div class="row mt-1 " >
                <h6 class="col-md-5 text-center">รวม</h6>
                <h6 class="col-md-2 text-center" id="sumFoodList"></h6>
                <h6 class="col-md-5">บาท</h6>
              </div>


              <!-- -------------------------footer space------------------------- -->
              <div class="fixed-bottom" style="max-width: 358px;">
                <div class="row d-flex align-items-end">
                  <div class="col-md-12">
                      <button type="button"
                      onclick="confirmFoodOrderList($('#student_id').text())"
                       class="btn btn-primary buy-btn ">ซื้อ</button>
                  </div>
                </div>
              </div>

          </div>
      </div>
      </div>
      <div class="col-md-5">
        <div class="text-center border rounded name_title">
          <h3 class="font-weight-bold">เมนูอาหาร</h3>
        </div>

        <div class="scollbar-food-list mt-4">
          <% if(store_food_list[0] == null ) {%>
            <div class="text-center mt-5">
               <h4>ไม่มีรายการอาหาร</h4>
             </div>
          <%} else {%>
            <% row = 1; %>
            <% for (var i = 0 ; i < parseInt(store_food_list.length / 2)+1 ; i++) { %>
              <!-- row data -->
              <!-- <h4>row : </h4> -->
              <div class="row-list">
              <% if(store_food_list[i] != null ) {%>
                <% if(store_food_list[i+(row-1)] != null ) {%>
                  <div class="column-list" >
                    <h5 class="title-name-food">
                      <%= store_food_list[i+(row-1)].food_name %>
                    </h5>
                    <!-- onclick="confirm_buy_item($('#student_id').text(),'<%= store_food_list[i+(row-1)].food_id %>','<%= store_food_list[i+(row-1)].food_name %>','<%= store_food_list[i+(row-1)].food_price %>')"  -->
                    <button class="btn btn-primary buy-btn buy_btn" id="food_list_id_<%= store_food_list[i+(row-1)].food_id %>"
                      onclick="addFoodOrder('<%= store_food_list[i+(row-1)].food_id %>',' <%= store_food_list[i+(row-1)].food_name %>','<%= store_food_list[i+(row-1)].food_price %>','<%= store_food_list[i+(row-1)].food_calories %>')"
                      disabled>
                      <div>
                        <%= store_food_list[i+(row-1)].food_price %> บาท
                      </div>
                    </button>
                  </div>
                
                <%} %>
                <% if(store_food_list[i+row] != null ) {%>
                  <div class="column-list" >
                    <h5 class="title-name-food" id="foodName">
                      <%= store_food_list[i+row].food_name %>
                    </h5>
                    <!-- onclick="confirm_buy_item($('#student_id').text(),'<%= store_food_list[i+row].food_id %>','<%= store_food_list[i+row].food_name %>','<%= store_food_list[i+row].food_price %>')"  -->
              
                    <button class="btn btn-primary buy-btn buy_btn" id="food_list_id_<%= store_food_list[i+row].food_id %>"
                      onclick="addFoodOrder('<%= store_food_list[i+row].food_id %>',' <%= store_food_list[i+row].food_name %>','<%= store_food_list[i+row].food_price %>','<%= store_food_list[i+row].food_calories %>')"
                      disabled>
                      <div>
                        <%= store_food_list[i+row].food_price %> บาท
                      </div>
                    </button>
                  </div>
                <%} %>
                <% row += 1 %>
        
              <%} else {}%>
              </div>
            <%} %>
          <%} %>

        </div>

        </div>
         

          
        </div>


      </div>
    </div>
  </div>
