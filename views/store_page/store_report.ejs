            </div>
        </form>
        </div>
    </div>
</div>


<script>
$(document).ready(function() {
    $.fn.dataTable.moment( 'D/M/YYYY');
    $('#TableID').DataTable({
        "language": {
            "lengthMenu": "แสดง _MENU_ ข้อมูล",
            "info": "แสดง หน้า _PAGE_ จาก _PAGES_",
            "search": "ค้นหา",
            "paginate": {
                "first": "หน้าแรก",
                "last":"หน้าสุดท้าย",
                "next":"ต่อไป",
                "previous":"ก่อนหน้า"
            }
        },"order": [[ 0, "desc" ]],

    });

    getDate();
    pdf_get_date();
    get_data_start_page();

    // food sales
    get_food_sales();
    // draw_food_sales_chart();
} );


pdf_get_date = () => {
    var today = new Date();
    // console.log(today);
    global_date = today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2);
    $("#pdf_selected_month").val(global_date);
}

