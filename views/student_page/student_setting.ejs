                </li>
              </ul>
            </div>
            <br>
            
            <div class="tab-content profile-tab" id="myTabContent">
              <!-- ข้อมูลนักเรียน -->
              <div class="tab-pane fade show active" id="student_profile" role="tabpanel" aria-labelledby="student_profile-tab">
                <!-- student id -->
                <div class="row ml-2">
                  <div class="col-md-4  mb-2">
                    <h5>รหัสนักเรียน</h5>
                  </div>
                  <div class="col-md-4">
                    <h5><%= student_data.student_id %></h5>
                  </div>
                </div>
                <!-- id card -->
                <div class="row ml-2">
                  <div class="col-md-4  mb-2">
                    <h5>เลขบัตรนักเรียน</h5>
                  </div>
                  <div class="col-md-4">
                    <h5><%= student_data.id_card %></h5>
                  </div>
                </div>
                <!-- class -->
                <div class="row  ml-2">
                  <div class="col-md-4  mb-2">
                    <h5>ชั้น</h5>
                  </div>
                  <div class="col-md-4">
                    <h5><%= student_data.class %> ห้อง <%= student_data.room %></h5>
                  </div>
                </div>
                <!-- sex -->
                <div class="row  ml-2">
                  <div class="col-md-4  mb-2">
                    <h5>เพศ</h5>
                  </div>
                  <div class="col-md-4 ">
                    <h5><%= student_data.sex %></h5>
                  </div>
                </div>
                <!-- weight -->
                <div class="row ml-2">
                  <div class="col-md-4  mb-2">
                    <h5>น้ำหนัก</h5>
                  </div>
                  <div class="col-md-4">
                    <h5><%= student_data.weight %> กิโลกรัม</h5>
                  </div>
                  <div class="col-md-3">
                      <button class="btn btn-info" data-toggle="modal" data-target="#edit_weight_modal" onclick="edit_weight('<%= student_data.weight %>')">แก้ไข</button>
                  </div>
                </div>
                <!-- height -->
                <div class="row ml-2">
                  <div class="col-md-4  mb-2">
                    <h5>ส่วนสูง</h5>
                  </div>
                  <div class="col-md-4 ">
                    <h5><%= student_data.height %> เซนติเมตร</h5>
                  </div>
                  <div class="col-md-3">
                    <button class="btn btn-info" data-toggle="modal" data-target="#edit_height_modal" onclick="edit_height('<%= student_data.height %>')">แก้ไข</button>
                </div>
                </div>
                
              </div>
              <!-- ข้อมูลนักเรียน -->
              <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <!-- uid -->
                <div class="row ml-2 ">
                  <div class="col-md-5 mb-2">
                    <h5>เลขประจำตัวประชาชน</h5>
                  </div>
                  <div class="col-md-5">
                    <h5 id="uid_id" hidden><%= student_data.uid %></h5>
                  </div>
                  <div class="col-md-2">
                    <button class="btn btn-primary" id="uid_id_toggle_btn" onclick="show_text('uid_id')">แสดง</button>
                  </div>
                </div>
                <!-- dob -->
                <div class="row ml-2">
                  <div class="col-md-5 mb-2">
                    <h5>วันเกิด</h5>
                  </div>
                  <div class="col-md-5">
                    <h5 id="dob_id" hidden> <%= student_data.dob.getDate() + "/" + (student_data.dob.getMonth()+1) + "/" + student_data.dob.getFullYear() %></h5>
                  </div>
                  <div class="col-md-2">
                    <button class="btn btn-primary" id="dob_id_toggle_btn" onclick="show_text('dob_id')">แสดง</button>
                  </div>
                </div>
                <!-- address -->
                <div class="row ml-2">
                  <div class="col-md-5 mb-2">
                    <h5>ที่อยู่</h5>
                  </div>
                  <div class="col-md-5">
                    <h5><%= student_data.address %></h5>
                  </div>
                </div>
                <!-- tel -->
                <div class="row ml-2">
                  <div class="col-md-5 mb-2">
                    <h5>เบอร์โทรศัพท์</h5>
                  </div>
                  <div class="col-md-5">
                    <h5><%= student_data.tel %></h5>
                  </div>
                </div>
                 <!-- email -->
                 <div class="row ml-2">
                  <div class="col-md-5 mb-2">
                    <h5>e-mail</h5>
                  </div>
                  <div class="col-md-5">
                    <h5><%= student_data.email %></h5>
                  </div>
                </div>
                <!-- parent -->
                <div class="row ml-2">
                  <div class="col-md-5 mb-2">
                    <h5>ผู้ปกครอง</h5>
                  </div>
                  <div class="col-md-5">
                    <h5><%= student_data.parent_pre_name %> <%= student_data.parent_fname %> <%= student_data.parent_lname %></h5>
                  </div>
                </div>
    
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
</div>

    <!-- edit password modal -->
<div class="modal fade" id="edit_modal" tabindex="-1" role="dialog" aria-labelledby="editmodeLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
