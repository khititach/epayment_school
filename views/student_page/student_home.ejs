<!-- Page Content  -->
<div id="content" class="p-4 p-md-5">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

      <button type="button" id="sidebarCollapse" class="btn btn-primary">
        <i class="fa fa-bars"></i>
        <span class="sr-only">Toggle Menu</span>
      </button>
      <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse"
        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <i class="fa fa-bars"></i>
      </button>
      <div class="toggle-title-name">ข้อมูลนักเรียน</div>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="nav navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">หน้าหลัก</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/student/history">ประวัติ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/student/setting">ตั้งค่า</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="emp-profile">
    
    <div class="row">
      <!-- image -->
      <div class="col-md-3 text-center ">
        <% if(student_data.image != '') {%>
        <img src="<%= student_data.image%>" class="img-fluid rounded add-shadow" alt="student_img_have">
        <% } else {%>
          <img src="../partials/image/unprofile.jpg" class="img-fluid rounded add-shadow" alt="student_img">
        <% }%>
      </div>
      <!-- selete head -->
      <div class="col-md-6">
        <div class="text-center border rounded name_title">
          <h2e><%= student_data.pre_name %> <%= student_data.first_name %> <%= student_data.last_name %></h2e>
        </div>
        <br>
        <div class="profile-head">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="student_profile-tab" data-toggle="tab" href="#student_profile" role="tab"
                  aria-controls="home" aria-selected="true">ข้อมูลนักเรียน</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                aria-selected="false">ข้อมูลส่วนตัว</a>
            </li>
          </ul>
        </div>
        <br>
        
        <div class="tab-content profile-tab" id="myTabContent">
          <!-- ข้อมูลนักเรียน -->
          <div class="tab-pane fade show active" id="student_profile" role="tabpanel" aria-labelledby="student_profile-tab">
            <!-- student id -->
            <div class="row ml-2">
              <div class="col-md-4 mb-2">
                <h5>รหัสนักเรียน</h5>
              </div>
              <div class="col-md-4">
                <h5><%= student_data.student_id %></h5>
              </div>
            </div>
            <!-- id card -->
            <div class="row ml-2">
              <div class="col-md-4 mb-2">
                <h5>เลขบัตรนักเรียน</h5>
              </div>
              <div class="col-md-4">
                <h5><%= student_data.id_card %></h5>
              </div>
            </div>
            <!-- class -->
            <div class="row ml-2">
              <div class="col-md-4 mb-2">
                <h5>ชั้น</h5>
              </div>
              <div class="col-md-4">
                <h5><%= student_data.class %> ห้อง <%= student_data.room %></h5>
              </div>
            </div>
            <!-- sex -->
            <div class="row ml-2">
              <div class="col-md-4 mb-2">
                <h5>เพศ</h5>
              </div>
              <div class="col-md-4 ">
                <h5><%= student_data.sex %></h5>
              </div>
            </div>
            <!-- weight -->
            <div class="row ml-2">
              <div class="col-md-4 mb-2">
                <h5>น้ำหนัก</h5>
              </div>
              <div class="col-md-4 ">
                <h5><%= student_data.weight %> กิโลกรัม</h5>
              </div>
            </div>
            <!-- height -->
            <div class="row ml-2">
              <div class="col-md-4 mb-2">
                <h5>ส่วนสูง</h5>
              </div>
              <div class="col-md-4 ">
                <h5><%= student_data.height %> เซนติเมตร</h5>
              </div>
            </div>
            <!-- money -->
            <div class="row ml-2">
              <div class="col-md-4 mb-2">
                <h5>จำนวนเงิน</h5>
              </div>
              <div class="col-md-3" >
                <h5 id="current_money_id" hidden><%= student_data.current_money %> บาท</h5>
              </div>
              <div class="col-md-3">
                <button class="btn btn-primary" id="current_money_id_toggle_btn" onclick="show_text('current_money_id')">แสดง</button>
              </div>
            </div>
          </div>
          <!-- ข้อมูลนักเรียน -->
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <!-- uid -->
            <div class="row ml-2">
              <div class="col-md-5 mb-2">
                <h5>เลขประจำตัวประชาชน</h5>
              </div>
              <div class="col-md-4">
                <h5 id="uid_id" hidden><%= student_data.uid %></h5>
              </div>
              <div class="col-md-2">
                <button class="btn btn-primary" id="uid_id_toggle_btn" onclick="show_text('uid_id')">แสดง</button>
              </div>
            </div>
            <!-- dob -->
            <div class="row ml-2">
              <div class="col-md-5 mb-2">
                <h5>วันเกิด</h5>
              </div>
              <div class="col-md-4">
                <h5 id="dob_id" hidden> <%= student_data.dob.getDate() + "/" + (student_data.dob.getMonth()+1) + "/" + student_data.dob.getFullYear() %></h5>
              </div>
              <div class="col-md-2">
                <button class="btn btn-primary" id="dob_id_toggle_btn" onclick="show_text('dob_id')">แสดง</button>
              </div>
            </div>
            <!-- address -->
            <div class="row ml-2">
              <div class="col-md-5 mb-2">
                <h5>ที่อยู่</h5>
              </div>
              <div class="col-md-4">
                <h5><%= student_data.address %></h5>
              </div>
            </div>
            <!-- tel -->
            <div class="row ml-2">
              <div class="col-md-5 mb-2">
                <h5>เบอร์โทรศัพท์</h5>
              </div>
              <div class="col-md-4">
                <h5><%= student_data.tel %></h5>
              </div>
            </div>
             <!-- email -->
             <div class="row ml-2">
              <div class="col-md-5 mb-2">
                <h5>e-mail</h5>
              </div>
              <div class="col-md-4">
                <h5><%= student_data.email %></h5>
              </div>
            </div>
            <!-- parent -->
            <div class="row ml-2">
              <div class="col-md-5 mb-2">
                <h5>ผู้ปกครอง</h5>
              </div>
              <div class="col-md-4">
                <h5><%= student_data.parent_pre_name %> <%= student_data.parent_fname %> <%= student_data.parent_lname %></h5>
              </div>
            </div>

          </div>
        </div>
      </div>
      <!-- notification -->
      <div class="col-md-3 card card-body ">

        <div class="text-center ">
          <h3>การแจ้งเตือน</h3>
        </div>

        <% for (var i = 0; i < 6; i++) {%>
          <% if (posts[i] != null && posts[i].title == 'เติมเงิน') {%>
            <!-- <div class="notify-box"> -->
              <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong><%= posts[i].title %></strong> <%= posts[i].message %>
              </div>
            <!-- </div> -->
          <%}%>
          <% if (posts[i] != null && posts[i].title == 'ซื้อ') {%>
            <div class="alert alert-dismissible alert-danger">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong><%= posts[i].title %></strong> <%= posts[i].message %>
            </div>
          <%} else {%>

          <%} }%>
        

      </div>
    </div>

  </div>

</div>
</div>




<script>
</script>